{
  "name": "judo-heroes",
  "version": "1.0.0",
  "description": "Simple application to showcase how to achieve universal rendering and routing with React and Express.",
  "main": "src/server.js",
  "repository": "git@github.com:lmammino/judo-heroes.git",
  "scripts": {
    "start": "cross-env NODE_ENV=production nodemon src/app.js --exec babel-node",
    "start-dev": "npm run start-dev-hmr",
    "start-dev-single-page": "http-server src/static",
    "start-dev-hmr": "webpack-dev-server --progress --inline --hot --open",
    "build": "cross-env NODE_ENV=production webpack -p",
    "test": "mocha src/test --compilers js:babel-register"
  },
  "author": "Luciano Mammino",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^3.1.4",
    "ejs": "^2.5.1",
    "express": "^4.14.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.6.1"
  },
  "devDependencies": {
    "babel-register": "^6.24.1",
    "http-server": "^0.9.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^1.3.0",
    "supertest": "^3.0.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.14.1"
  }
}
